{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000"
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "category": "DeveloperTool",
    "copyright": "",
    "targets": [
      "app",
      "dmg",
      "appimage",
      "nsis"
    ],
    "externalBin": [],
    "icon": [
      "icons/generated/Assets.xcassets/AppIcon.appiconset/32.png",
      "icons/generated/Assets.xcassets/AppIcon.appiconset/128.png",
      "icons/generated/Assets.xcassets/AppIcon.appiconset/256.png",
      "icons/generated/Assets.xcassets/AppIcon.appiconset/512.png",
      "icons/generated/Assets.xcassets/AppIcon.appiconset/1024.png",
      "icons/generated/icon.icns",
      "icons/generated/icon.ico"
    ],
    "longDescription": "",
    "resources": [],
    "shortDescription": "",
    "fileAssociations": [
      {
        "description": "Video files",
        "ext": [
          "mp4",
          "mkv",
          "avi",
          "mov",
          "wmv",
          "webm"
        ]
      },
      {
        "description": "Audio files",
        "ext": [
          "mp3",
          "wav",
          "aac",
          "flac",
          "oga",
          "ogg",
          "opic",
          "opus"
        ]
      }
    ]
  },
  "productName": "screenpipe",
  "identifier": "screenpi.pe",
  "plugins": {
    "updater": {
      "active": true,
      "dialog": true,
      "endpoints": [
        "https://cdn.crabnebula.app/update/mediar/screenpipe/{{target}}-{{arch}}/{{current_version}}"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDIyQjQ2RkQzMUNBOUFDMTcKUldRWHJLa2MwMiswSWl3RlBGUW5zYUE0Zm0vNFFRRTltNUZZTUVxR2FxUDNtSWdUSHgyL3JNcmcK"
    }
  },
  "app": {
    "windows": [
      {
        "title": "screenpipe",
        "width": 1200,
        "height": 800,
        "minWidth": 1200,
        "minHeight": 800,
        "resizable": true
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' customprotocol: asset:",
        "connect-src": "ipc: http://ipc.localhost https://api.openai.com http://localhost:3030 https://web.crabnebula.cloud https://api.github.com https://github.com https://*.githubusercontent.com https://*.github.com http://*:11434",
        "font-src": [
          "https://fonts.gstatic.com",
          "tauri://localhost",
          "http://tauri.localhost"
        ],
        "media-src": "'self' mediadevices: asset: http://asset.localhost file:",
        "img-src": "'self' asset: http://asset.localhost blob: data: https://*.githubusercontent.com https://*.github.com https://github.com https://*.s3.amazonaws.com",
        "style-src": "'unsafe-inline' 'self' https://fonts.googleapis.com"
      }
    }
  }
}